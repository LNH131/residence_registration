<Window x:Class="Resident.View.PoliceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Police" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Define row structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Approvals Group -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="LightSteelBlue" Padding="10">
            <TextBlock Text="Dashboard Police" 
                       FontSize="24" FontWeight="Bold" Foreground="Navy"/>
        </Border>

        <!-- Approvals (Registrations, Transfers, Separations) -->
        <GroupBox Grid.Row="1" Header="Approvals (ApprovedByLeader)" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding ApprovalItems}"
                          SelectedItem="{Binding SelectedApprovalItem}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.Columns>
                        <!-- Adjust columns to display the ApprovalItem fields you want -->
                        <DataGridTextColumn Header="ID" Binding="{Binding ItemId}" Width="Auto"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding ItemType}" Width="Auto"/>
                        <DataGridTextColumn Header="Creator" Binding="{Binding CreatorName}" Width="*" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Process / View Details buttons for approvals -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="Process"
                            Command="{Binding ProcessCommand}"
                            Margin="5"/>
                    <Button Content="View Detail"
                            Command="{Binding ViewDetailsCommand}"
                            Margin="5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Main Content: Household Monitoring -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Household Monitoring DataGrid -->
            <GroupBox Header="Household Monitoring" Grid.Column="0" Margin="5">
                <DataGrid ItemsSource="{Binding Households}" 
                          SelectedItem="{Binding SelectedHousehold, Mode=TwoWay}"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding HouseholdId}" Width="Auto"/>
                        <DataGridTextColumn Header="Street" Binding="{Binding Address.Street}" Width="*"/>
                        <DataGridTextColumn Header="City" Binding="{Binding Address.City}" Width="*"/>
                        <DataGridTextColumn Header="Created Date" Binding="{Binding CreatedDate}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
            <!-- Các chức năng phụ -->
            <StackPanel Grid.Column="1" Margin="5" VerticalAlignment="Top">
                <Button Content="View Household Detail"
                        Height="40"
                        Command="{Binding ViewHouseholdDetailCommand}"/>
                <Button Content="Chat" Height="40" Command="{Binding ChatCommand}"/>
                <Button Content="Reports" Height="40" Command="{Binding ViewReportCommand}"/>
                <Button Content="Notifications" Height="40" Command="{Binding NotificationCommand}"/>
                <Button Content="Xem tất cả" Height="40" Command="{Binding ViewAllApprovalsCommand}"/>
            </StackPanel>
        </Grid>
        <!-- Footer -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Logout" Width="100" Height="30" x:Name="btnLogout"/>
        </StackPanel>
    </Grid>
</Window>
