<Window x:Class="Resident.View.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Khu vực hiển thị danh sách tin nhắn -->
        <ListBox ItemsSource="{Binding ChatMessages}" Grid.Row="0" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <!-- Hiển thị ID người gửi (để demo) -->
                        <TextBlock Text="{Binding FromUserId}" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text=":" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Content}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!-- Khu vực nhập tin nhắn -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <TextBox Width="400" Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,5,0"/>
            <Button Content="Send" Width="80" Command="{Binding SendMessageCommand}" />
        </StackPanel>
    </Grid>
</Window>
