<Window x:Class="Resident.View.AreaLeaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard AreaLeader" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Background="LightBlue" Grid.Row="0" Padding="10">
            <TextBlock Text="Dashboard AreaLeader" 
                       FontSize="24" FontWeight="Bold" Foreground="DarkBlue"/>
        </Border>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Hồ sơ cần duyệt" Grid.Column="0" Margin="5">
                <ListView Name="lvApplications"
                          ItemsSource="{Binding PendingRegistrations}"
                          SelectedItem="{Binding SelectedRegistration}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Mã hồ sơ" Width="80" DisplayMemberBinding="{Binding RegistrationId}"/>
                            <GridViewColumn Header="Họ tên" Width="150" DisplayMemberBinding="{Binding User.FullName}"/>
                            <GridViewColumn Header="Trạng thái" Width="100" DisplayMemberBinding="{Binding Status}"/>
                            <!-- New column with the View Details button -->
                            <GridViewColumn Header="Hành động" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View Details" 
                                                Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
            <!-- Side functionalities -->
            <StackPanel Grid.Column="1" Margin="5" VerticalAlignment="Top">
                <Button Content="Duyệt hồ sơ" Height="40" Margin="0,0,0,10"
            Command="{Binding ApproveCommand}"/>
                <Button Content="Gửi nhận xét cho Công an" Height="40" Margin="0,0,0,10"
            Command="{Binding SendCommentCommand}"/>
                <Button Content="Xem thông báo" Height="40" Margin="0,0,0,10"
            Command="{Binding ViewNotificationsCommand}"/>
                <Button Content="Chat" Height="40" Margin="0,0,0,10"
            Command="{Binding ChatCommand}"/>
                <Button Content="Xem hộ khẩu" Height="40" Margin="0,0,0,10"
            Command="{Binding ViewHouseholdCommand}"/>
                <!-- New button to view all registrations -->
                <Button Content="Xem tất cả hồ sơ" Height="40" Margin="0,0,0,10"
            Command="{Binding ViewAllRegistrationsCommand}"/>
            </StackPanel>
        </Grid>
        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Logout" Width="100" Height="30" x:Name="btnLogout"/>
        </StackPanel>
    </Grid>
</Window>
