<Window x:Class="Resident.View.HouseholdSeparationDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết tách hộ" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Chi tiết tách hộ" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Separation ID -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Separation ID:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Separation.SeparationId}"/>
            </StackPanel>

            <!-- OriginalHouseholdId -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Original Household:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Separation.OriginalHouseholdId}"/>
            </StackPanel>

            <!-- NewHouseholdId -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="New Household:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Separation.NewHouseholdId}"/>
            </StackPanel>

            <!-- Status -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Trạng thái:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Separation.Status}"/>
            </StackPanel>

            <!-- Approve/Reject Buttons -->
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" HorizontalAlignment="Center">
                <Button Content="Duyệt" Width="100" Margin="5"
                        Command="{Binding ApproveCommand}"/>
                <Button Content="Từ chối" Width="100" Margin="5"
                        Command="{Binding RejectCommand}"/>
            </StackPanel>

            <Button Content="Đóng" Width="100" Margin="10" HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
