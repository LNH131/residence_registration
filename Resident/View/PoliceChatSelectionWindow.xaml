<Window x:Class="Resident.View.PoliceChatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn đối tác chat" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Citizens Section -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <!-- Spacer -->
            <RowDefinition Height="20"/>
            <!-- Area Leaders Section -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Citizens Section -->
        <TextBlock Grid.Row="0" Text="Chat với Công dân:" FontSize="16" Margin="0,0,0,10"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Citizens}" 
                  SelectedItem="{Binding SelectedCitizen}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="2" Content="Chat với Công dân" Width="150" HorizontalAlignment="Right" Margin="0,10,0,10"
                Command="{Binding ChatWithCitizenCommand}"/>

        <!-- Area Leaders Section -->
        <TextBlock Grid.Row="4" Text="Chat với Tổ trưởng khu phố:" FontSize="16" Margin="0,10,0,10"/>
        <DataGrid Grid.Row="5" ItemsSource="{Binding AreaLeaders}" 
                  SelectedItem="{Binding SelectedAreaLeader}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Chat với Tổ trưởng" Width="150" Margin="0,0,10,0"
                    Command="{Binding ChatWithAreaLeaderCommand}"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
