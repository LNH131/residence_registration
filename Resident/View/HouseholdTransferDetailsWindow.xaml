<Window x:Class="Resident.View.HouseholdTransferDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết chuyển hộ" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Chi tiết chuyển hộ" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Transfer ID -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Transfer ID:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Transfer.TransferId}"/>
            </StackPanel>

            <!-- FromAddressId -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Từ địa chỉ:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Transfer.FromAddressId}"/>
            </StackPanel>

            <!-- ToAddressId -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Đến địa chỉ:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Transfer.ToAddressId}"/>
            </StackPanel>

            <!-- Status -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Trạng thái:" FontWeight="Bold" Width="120"/>
                <TextBlock Text="{Binding Transfer.Status}"/>
            </StackPanel>

            <!-- Approve/Reject Buttons -->
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" HorizontalAlignment="Center">
                <Button Content="Duyệt" Width="100" Margin="5"
                        Command="{Binding ApproveCommand}"/>
                <Button Content="Từ chối" Width="100" Margin="5"
                        Command="{Binding RejectCommand}"/>
            </StackPanel>

            <Button Content="Đóng" Width="100" Margin="10" HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
