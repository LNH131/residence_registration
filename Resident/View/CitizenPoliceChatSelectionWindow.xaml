<Window x:Class="Resident.View.CitizenPoliceChatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn Công an để chat" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Chọn Công an từ khu vực của bạn:" 
                       FontSize="16" Margin="0,0,0,10"/>
            <ListBox ItemsSource="{Binding AvailablePolice}" 
                     SelectedItem="{Binding SelectedPolice}" 
                     DisplayMemberPath="FullName" Height="150"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Chat" Width="80" Margin="0,0,10,0"
                        Command="{Binding OpenChatCommand}"/>
                <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
