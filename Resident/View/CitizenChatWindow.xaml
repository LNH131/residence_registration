<Window x:Class="Resident.View.CitizenChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Citizen Chat" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Phần hiển thị cuộc trò chuyện -->
            <RowDefinition Height="*"/>
            <!-- Phần nhập tin nhắn -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cuộc trò chuyện (ScrollViewer với ItemsControl) -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ChatMessages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <!-- Hiển thị nội dung tin nhắn -->
                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" />
                            <!-- Hiển thị thời gian gửi -->
                            <TextBlock Text="{Binding SentDate, StringFormat='HH:mm dd/MM/yyyy'}" 
                                       FontSize="10" Foreground="Gray" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Nhập tin nhắn mới và nút gửi -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}" 
                     Width="300" Height="30" Margin="0,0,10,0" />
            <Button Content="Send" Command="{Binding SendMessageCommand}" 
                    Width="60" Height="30" />
        </StackPanel>
    </Grid>
</Window>
